    "@types/cookie-parser": "^1.4.0",
    "@types/express": "^4.17.0",
    "@types/node": "^20.0.0",
    "@types/passport-jwt": "^4.0.0",
    "prisma": "^5.0.0",
    "source-map-support": "^0.5.21",
    "ts-loader": "^9.5.0",
    "ts-node": "^10.9.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.0",
    "unplugin-swc": "^1.5.0",
    "vitest": "^4.0.18"
  }
